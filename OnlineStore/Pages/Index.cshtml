@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
}

<div class="container">
    <!-- Герой секция -->
    <div class="row align-items-center py-5 mb-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold mb-3">Добро пожаловать в наш магазин!</h1>
            <p class="lead mb-4">Лучшие товары по лучшим ценам. Быстрая доставка, качественный сервис и широкий ассортимент.</p>
            <div class="d-flex gap-3">
                <a href="/Catalog" class="btn btn-primary btn-lg">
                    <i class="bi bi-shop me-2"></i>Перейти в каталог
                </a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a href="/Cart" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-cart me-2"></i>Моя корзина
                    </a>
                }
            </div>
        </div>
        <div class="col-lg-6">
            <img src="https://via.placeholder.com/600x400" class="img-fluid rounded shadow" alt="Online Store">
        </div>
    </div>
    
    <!-- Популярные категории -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">Популярные категории</h2>
        </div>
        @if (Model.Categories != null && Model.Categories.Any())
        {
            @foreach (var category in Model.Categories.Take(4))
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100 text-center hover-shadow">
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="bi bi-laptop display-4 text-primary"></i>
                            </div>
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text text-muted">@(category.Products?.Count ?? 0) товаров</p>
                            <a href="/Catalog?categoryId=@category.Id" class="btn btn-outline-primary">
                                Смотреть все
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    
    <!-- Популярные товары -->
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Популярные товары</h2>
        </div>
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products.Take(8))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 product-card">
                        <img src="@product.ImageUrl" 
                             class="card-img-top product-image" 
                             alt="@product.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small">@product.Category?.Name</p>
                            <p class="card-text flex-grow-1">@(product.Description.Length > 60 ? product.Description.Substring(0, 60) + "..." : product.Description)</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="price h5 mb-0">@product.Price.ToString("C")</span>
                                    @if (product.Stock > 0)
                                    {
                                        <span class="badge bg-success">В наличии</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Нет в наличии</span>
                                    }
                                </div>
                                
                                <form method="post" asp-page="/Cart/Index" asp-page-handler="AddToCart">
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    @if (product.Stock == 0)
                                    {
                                        <button type="button" class="btn btn-secondary w-100" disabled>
                                            <i class="bi bi-cart-plus me-2"></i>Нет в наличии
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-cart-plus me-2"></i>В корзину
                                        </button>
                                    }
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        
        @if (Model.Products == null || !Model.Products.Any())
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">Товары временно отсутствуют</p>
                <a href="/Catalog" class="btn btn-primary">Перейти в каталог</a>
            </div>
        }
    </div>
    
    <!-- Призыв к действию -->
    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="row mt-5">
            <div class="col-12 text-center py-5 bg-light rounded">
                <h2 class="mb-3">Нашли что искали?</h2>
                <p class="lead mb-4">Просмотрите весь наш каталог или оформите заказ прямо сейчас!</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/Catalog" class="btn btn-primary btn-lg">
                        <i class="bi bi-grid me-2"></i>Весь каталог
                    </a>
                    <a href="/Cart" class="btn btn-success btn-lg">
                        <i class="bi bi-cart-check me-2"></i>Оформить заказ
                    </a>
                </div>
            </div>
        </div>
    }
</div>