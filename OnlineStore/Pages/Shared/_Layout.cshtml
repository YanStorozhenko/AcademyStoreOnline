@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="ru" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mobile.css" asp-append-version="true" />
    <style>
        .cart-count {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #f72585;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Десктопная навигация -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top desktop-nav">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-page="/Index">
                <i class="bi bi-shop me-2"></i>OnlineStore
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Catalog/Index">Каталог</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Cart/Index">
                            <i class="bi bi-cart3"></i> Корзина
                            <span id="cartCountBadge" class="cart-count">0</span>
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-page="/Admin/Index">
                                <i class="bi bi-shield-lock"></i> Админ
                            </a>
                        </li>
                    }
                </ul>
                
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Мобильная навигация -->
    <nav class="mobile-nav d-lg-none">
        <div class="container">
            <div class="d-flex justify-content-around">
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" 
                   asp-page="/Index">
                    <i class="bi bi-house-door"></i>
                    <span>Главная</span>
                </a>
                
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Catalog/Index" ? "active" : "")" 
                   asp-page="/Catalog/Index">
                    <i class="bi bi-grid"></i>
                    <span>Каталог</span>
                </a>
                
                <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Cart/Index" ? "active" : "")" 
                   asp-page="/Cart/Index">
                    <i class="bi bi-cart3"></i>
                    <span>Корзина</span>
                    <span id="cartCountMobile" class="cart-count">0</span>
                </a>
                
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Account/Profile" ? "active" : "")" 
                       asp-page="/Account/Profile">
                        <i class="bi bi-person"></i>
                        <span>Профиль</span>
                    </a>
                }
                else
                {
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Account/Login" ? "active" : "")" 
                       asp-page="/Account/Login">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Войти</span>
                    </a>
                }
            </div>
        </div>
    </nav>

    <main class="flex-grow-1 mt-5 pt-3">
        <div class="container mt-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>OnlineStore</h5>
                    <p>Лучшие товары по лучшим ценам. Мы работаем для вас!</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Контакты</h5>
                    <p>Email: support@onlinestore.com</p>
                    <p>Телефон: +7 (999) 123-45-67</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Быстрые ссылки</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white-50 text-decoration-none">Главная</a></li>
                        <li><a href="/Catalog" class="text-white-50 text-decoration-none">Каталог</a></li>
                        <li><a href="/Cart" class="text-white-50 text-decoration-none">Корзина</a></li>
                    </ul>
                </div>
            </div>
            <hr class="bg-light">
            <div class="text-center">
                <p>&copy; 2024 OnlineStore. Все права защищены.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Обновление счетчика корзины
        async function updateCartCount() {
            try {
                const response = await fetch('/Cart/GetCount');
                if (response.ok) {
                    const count = await response.text();
                    document.getElementById('cartCountBadge').textContent = count;
                    document.getElementById('cartCountMobile').textContent = count;
                }
            } catch (error) {
                console.error('Error updating cart count:', error);
            }
        }
        
        // Обновляем счетчик при загрузке страницы
        document.addEventListener('DOMContentLoaded', updateCartCount);
            // Функция для обновления счетчика корзины
    async function updateCartCount() {
        try {
            const response = await fetch('/api/cart/count');
            if (response.ok) {
                const count = await response.text();
                document.querySelectorAll('.cart-count').forEach(badge => {
                    badge.textContent = count;
                    badge.style.display = parseInt(count) > 0 ? 'flex' : 'none';
                });
            }
        } catch (error) {
            console.error('Error updating cart count:', error);
        }
    }
    
    // Обновляем при загрузке страницы
    document.addEventListener('DOMContentLoaded', updateCartCount);
    
    // Функция для быстрого добавления в корзину
    async function quickAddToCart(productId, button) {
        try {
            button.disabled = true;
            button.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
            
            const response = await fetch(`/api/cart/add/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            if (response.ok) {
                const result = await response.json();
                showToast('success', result.message);
                await updateCartCount();
            } else {
                showToast('error', 'Ошибка при добавлении товара');
            }
        } catch (error) {
            console.error('Error adding to cart:', error);
            showToast('error', 'Ошибка при добавлении товара');
        } finally {
            button.disabled = false;
            button.innerHTML = '<i class="bi bi-cart-plus"></i> В корзину';
        }
    }
    
    // Функция для показа уведомлений
    function showToast(type, message) {
        const toastContainer = document.getElementById('toast-container') || createToastContainer();
        
        const toast = document.createElement('div');
        toast.className = `toast show ${type === 'success' ? 'bg-success' : 'bg-danger'} text-white`;
        toast.setAttribute('role', 'alert');
        toast.innerHTML = `
            <div class="toast-body d-flex justify-content-between align-items-center">
                <span>${message}</span>
                <button type="button" class="btn-close btn-close-white" onclick="this.parentElement.parentElement.remove()"></button>
            </div>
        `;
        
        toastContainer.appendChild(toast);
        
        setTimeout(() => {
            toast.remove();
        }, 3000);
    }
    
    function createToastContainer() {
        const container = document.createElement('div');
        container.id = 'toast-container';
        container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
        document.body.appendChild(container);
        return container;
    }
        
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
